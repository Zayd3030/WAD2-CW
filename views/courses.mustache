{{> header}}

<h2>Available Courses</h2>

{{#courses}}
  <div class="course-card">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
    <p>Duration: {{duration}}</p>
    <a href="/courses/{{_id}}">View Classes</a>
  </div>
{{/courses}}

{{^courses}}
  <p>No courses available right now.</p>
{{/courses}}
