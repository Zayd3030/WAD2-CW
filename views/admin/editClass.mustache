{{! Mustache template for editing a class }}

{{> header}}

<div class="container mt-5">
  <h2>Edit Class</h2>

  <form method="POST" action="/admin/edit-class/{{classItem._id}}">
    <div class="mb-3">
      <label class="form-label">Date</label>
      <input type="date" class="form-control" name="date" value="{{classItem.date}}" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Time</label>
      <input type="time" class="form-control" name="time" value="{{classItem.time}}" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Location</label>
      <input type="text" class="form-control" name="location" value="{{classItem.location}}" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Price (Â£)</label>
      <input type="number" class="form-control" name="price" value="{{classItem.price}}" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>

  <form method="POST" action="/admin/delete-class/{{classItem._id}}" class="mt-2">
    <button type="submit" class="btn btn-danger">Delete Class</button>
  </form>
</div>

