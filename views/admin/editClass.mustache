{{> header}}
<h2>Edit Class</h2>

<form method="POST" action="/admin/edit-class/{{classItem._id}}">
  <input type="date" name="date" value="{{classItem.date}}" required><br>
  <input type="time" name="time" value="{{classItem.time}}" required><br>
  <input type="text" name="location" value="{{classItem.location}}" required><br>
  <input type="number" name="price" value="{{classItem.price}}" required><br>
  <button type="submit">Save Changes</button>
</form>
<form method="POST" action="/admin/delete-class/{{classItem._id}}">
  <button type="submit" style="color: red;">Delete Class</button>
</form>
