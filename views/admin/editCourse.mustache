{{! Mustache template for editing a course in the admin panel }}

{{> header}}
<h2>Edit Course</h2>

<form method="POST" action="/admin/edit-course/{{course._id}}">
  <input type="text" name="name" value="{{course.name}}" required><br>
  <textarea name="description">{{course.description}}</textarea><br>
  <input type="text" name="duration" value="{{course.duration}}" required><br>
  <button type="submit">Save Changes</button>
</form>
<form method="POST" action="/admin/delete-course/{{course._id}}">
  <button type="submit" style="color: red;">Delete Course</button>
</form>
