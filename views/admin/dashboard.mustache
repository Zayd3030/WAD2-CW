{{! Mustache template for admin dashboard }}

{{> header}}

<div class="container mt-4">
  <h2 class="text-center mb-4">Admin Dashboard âœ</h2>

  <div class="d-flex justify-content-between mb-4">
    <a href="/admin/add-course" class="btn btn-primary">Add New Course â•</a>
    <a href="/admin/manage-users" class="btn btn-secondary">Manage Users ğŸ‘¤</a>
  </div>

<h2>Courses:</h2>

  {{#courses}}
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h4 class="card-title">{{name}}</h4>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><strong>Duration:</strong> {{duration}} weeks</p>

        <div class="mb-3">
          <a href="/admin/edit-course/{{_id}}" class="btn btn-outline-primary btn-sm">Edit Course</a>
          <form method="POST" action="/admin/delete-course/{{_id}}" class="d-inline">
            <button type="submit" class="btn btn-outline-danger btn-sm">Delete Course</button>
          </form>
          <a href="/admin/add-class/{{_id}}" class="btn btn-outline-success btn-sm">Add Class</a>
        </div>

        <h5>Classes:</h5>
        {{#classes}}
          <div class="border rounded p-2 mb-2">
            <p class="mb-1">
              <strong>{{time}} Class </strong> on  {{date}} - {{location}} (Â£{{price}})
            </p>
            <div>
              <a href="/admin/edit-class/{{_id}}" class="btn btn-sm btn-outline-primary">Edit</a>
              <form method="POST" action="/admin/delete-class/{{_id}}" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
              <a href="/admin/bookings/{{_id}}" class="btn btn-sm btn-outline-dark">View Bookings</a>
            </div>
          </div>
        {{/classes}}

        {{^classes}}
          <p class="text-muted">No classes yet for this course.</p>
        {{/classes}}
      </div>
    </div>
  {{/courses}}
</div>
