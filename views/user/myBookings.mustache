{{> header}}

<h2>My Bookings</h2>

{{#message}}
  <div class="alert alert-info">{{message}}</div>
{{/message}}

{{#bookings}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{course.name}}</h5>
      <p>
        Date: {{class.date}}<br>
        Time: {{class.time}}<br>
        Location: {{class.location}}<br>
        Price: Â£{{class.price}}
      </p>
      <form action="/courses/cancel-booking/{{_id}}" method="POST">
        <button class="btn btn-danger">Cancel Booking</button>
      </form>
    </div>
  </div>
{{/bookings}}

{{^bookings}}
  <p>You have no bookings.</p>
{{/bookings}}