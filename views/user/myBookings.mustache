{{! Mustache template for user's bookings page }}

{{> header}}

<div class="container mt-5">
  <h2 class="mb-4">My Bookings</h2>

  {{#message}}
    <div class="alert alert-success">{{message}}</div>
  {{/message}}

  {{#bookings}}
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">{{course.name}}</h5>
        <p class="mb-1"><strong>Date:</strong> {{class.date}}</p>
        <p class="mb-1"><strong>Time:</strong> {{class.time}}</p>
        <p class="mb-1"><strong>Location:</strong> {{class.location}}</p>
        <p class="mb-3"><strong>Price:</strong> Â£{{class.price}}</p>

        <form method="POST" action="/courses/cancel-booking/{{_id}}">
          <button type="submit" class="btn btn-danger">Cancel Booking</button>
        </form>
      </div>
    </div>
  {{/bookings}}

  {{^bookings}}
    <div class="alert alert-warning">You haven't booked any classes yet.</div>
  {{/bookings}}
</div>
