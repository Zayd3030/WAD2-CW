{{! Mustache template for user's bookings page }}

{{> header}}

<h2>My Bookings</h2>

{{#message}}
  <p style="color: green;">{{message}}</p>
{{/message}}

{{#bookings}}
  <div style="margin-bottom: 20px; border: 1px solid #ccc; padding: 10px;">
    <h3>{{course.name}}</h3>
    <p><strong>Date:</strong> {{class.date}}</p>
    <p><strong>Time:</strong> {{class.time}}</p>
    <p><strong>Location:</strong> {{class.location}}</p>
    <p><strong>Price:</strong> Â£{{class.price}}</p>
  </div>
  <form method="POST" action="/courses/cancel-booking/{{_id}}">
  <button type="submit" style="color: red;">Cancel Booking</button>
</form>

{{/bookings}}

{{^bookings}}
  <p>You haven't booked any classes yet.</p>
{{/bookings}}
